#!/bin/zsh -e
source="$(find /home/nicotine/done/ -type d -mindepth 1|head -n 1)"
if [[ -z "$source" ]]; then
    echo "Nothing to do!"
    exit 0
fi
artist="$(metaflac --show-tag=artist $source/*' 01 '*)"
artist="${artist#artist=}"
dir=($(ls -d /music/*/"$artist" || :))
if [[ -z "$dir" ]]; then
    echo "I don't know the artist $artist, where do you want to put 'em."
    while :; do
        printf "\e[;9G[4]ad  [H]ipHop  [J]azz  [K]lassiek  [M]etal  [P]op  [S]oundtracks "
        read -sk1 answer
        case $answer in
            4)
                dir="/music/4ad/$artist"; break ;;
            h)
                dir="/music/HipHop/$artist"; break ;;
            j)
                dir="/music/Jazz/$artist"; break  ;;
            k)
                dir="/music/Klassiek/$artist"; break;;
            m)
                dir="/music/Metal/$artist"; break ;;
            p)
                dir="/music/Pop/$artist"; break ;;
            s)
                dir="/music/Soundtracks/$artist"; break ;;
        esac
    done
    mkdir -p $dir
    echo
fi
set -x
rsync -v --info=progress2 --partial -rlptD "$source" "$dir"
set +x
chmod -R g-w "$dir"
rm -rf "$source"
